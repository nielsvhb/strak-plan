---
const { stepNumber, title, description, image } = Astro.props;
---

<article class="py-16">
	<div class="flex space-x-8">
		<div class="text-white text-6xl font-heading mb-auto mt-4 ml-12">
			{stepNumber}
		</div>
		<div class="mb-4">
			<img src={image} alt="{title}" />
			<h4 class="text-primary uppercase font-bold tracking-widest mt-4">
				{title}
			</h4>
		</div>
	</div>
	<p class="max-w-xs leading-tight">
		{description}
	</p>
</article>
